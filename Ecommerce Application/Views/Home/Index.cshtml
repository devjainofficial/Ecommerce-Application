@using Ecommerce_Application.Repositories
@inject IProductCRUDRepository _productService;

<section>
    <div id="containerSlider">
        <div id="slidingImage"> <img src="~/img/img1.png" alt="image1" loading="eager"> </div>
        <div id="slidingImage"> <img src="~/img/img2.png" alt="image2" loading="eager"> </div>
        <div id="slidingImage"> <img src="~/img/img3.png" alt="image3" loading="eager"> </div>
        <div id="slidingImage"> <img src="~/img/img4.png" alt="image4" loading="eager"> </div>
    </div>
</section>


<div id="mainContainer">

    <h1> clothing for men and women </h1>
    <div id="containerClothing">

        @{
            var clothingProducts = await _productService.GetAllDetails();
            foreach (var product in clothingProducts)
            { 
                @if (!@product.Category.IsAccessories)  
                {
                    <div id="box">
                        <a href="/Product/ContentDetails/?ProductId=@product.ProductId">

                            <img src="@product.ThumbImage" />
                            <div id="details">
                                <h3>@product.ProductName</h3>
                                <h4>@product.BrandName</h4>
                                <del><h2>Rs. @product.Price</h2></del>
                                <h3>Rs. @product.SellingPrice</h3>
                            </div>

                        </a>
                    </div>
                }
            }

        }

    </div>

    <h1> accessories for men and women </h1>
    <div id="containerAccessories">


        @{
            var accessoriesProducts = await _productService.GetAllDetails();
            foreach (var product in accessoriesProducts)
            {
                @if (@product.Category.IsAccessories)
                {
                    <div id="box">
                        <a href="/Product/ContentDetails/?ProductId=@product.ProductId">

                            <img src="@product.ThumbImage" />
                            <div id="details">
                                <h3>@product.ProductName</h3>
                                <h4>@product.BrandName</h4>
                                <del><h2>Rs. @product.Price</h2></del>
                                <h3>Rs. @product.SellingPrice</h3>
                            </div>

                        </a>
                    </div>
                }
            }

        }

    </div>
</div>


@section Scripts {
    <script src="~/js/index.js"></script>
}

