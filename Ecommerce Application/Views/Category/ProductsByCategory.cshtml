@using Ecommerce_Application.Repositories
@inject ICategoryRepository _categoryService;
@inject ICategoryCRUDRepository _categorycrudService;

<section>
    <div id="containerSlider">
        <div id="slidingImage"> <img src="~/img/img1.png" alt="image1" loading="eager"> </div>
        <div id="slidingImage"> <img src="~/img/img2.png" alt="image2" loading="eager"> </div>
        <div id="slidingImage"> <img src="~/img/img3.png" alt="image3" loading="eager"> </div>
        <div id="slidingImage"> <img src="~/img/img4.png" alt="image4" loading="eager"> </div>
    </div>
</section>
<div id="mainContainer">
    @{

        var AllCategories = await _categoryService.GetAllCategoriesAsync(6);
        @foreach (var category in AllCategories)
        {
            @if (category.ParentId == category.)
            {
                <h1> @category.Name </h1>

                <div id="containerClothing">
                    @{
                        var MenClothingProducts = await _categoryService.GetAllProductsByCategoriesAsync(category.CategoryId);
                        @if (category.ParentId == category.CategoryId)
                        {
                            @foreach (var product in MenClothingProducts)
                            {
                                <div id="box">
                                    <a href="/Product/ContentDetails/?ProductId=@product.ProductId">

                                        <img src="@product.ThumbImage" />
                                        <div id="details">
                                            <h3>@product.ProductName</h3>
                                            <h4>@product.BrandName</h4>
                                            <del><h2>Rs. @product.Price</h2></del>
                                            <h3>Rs. @product.SellingPrice</h3>
                                        </div>
                                    </a>
                                </div>

                            }
                        }
                    }


                </div>
            }
        }

    }
</div>
@section Scripts {
    <script src="~/js/index.js"></script>
}
