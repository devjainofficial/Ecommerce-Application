                        if (localData) {
                            
                            $.ajax({
                                url: '@Url.Action("AddCart", "Cart")',
                                method: 'POST',
                                data: { cartData: localData },
                                dataType: 'json',
                                success: function (response) {
                                    console.log('Cart data sent successfully.');
                                    localStorage.removeItem("cart");
                                    
